{
  "id": "com.github.melange-app.plugin-chat",
  "name": "Chat",
  "version": "0.0.8",
  "image": "chat.png",
  "description": "Send quick messages to one another.",
  "permissions": {
    "read-message": ["airdispat.ch/chat/body", "airdispat.ch/chat/data"],
    "send-message": ["airdispat.ch/chat/body", "airdispat.ch/chat/data"]
  },
  "notifications": {
    "airdispat.ch/chat/body": {
      "title": "New Chat - {{ from }}",
      "body": "{{ component \"airdispat.ch/chat/body\" }}"
    }
  },
  "viewers": {
    "default": {
      "hidden": true,
      "type": ["airdispat.ch/chat/body"]
    }
  },
  "author": {
    "name": "Hunter Leath",
    "email": "h@hunterleath.com"
  },
  "homepage": "http://airdispat.ch/plugins/chat"
}
